{
  "name": "pm-dashboard",
  "displayName": "PM Dashboard",
  "version": "0.0.1",
  "description": "A comprehensive dashboard for Product Managers",
  "author": "prateek",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "lint": "biome check .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.15.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "storage",
      "alarms",
      "activeTab",
      "clipboardWrite"
    ],
    "host_permissions": [
      "https://api.producthunt.com/*",
      "https://hacker-news.firebaseio.com/*",
      "https://*.atlassian.net/*"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome check --write"
    ]
  }
}
