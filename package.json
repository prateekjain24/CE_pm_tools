{
  "name": "pm-dashboard",
  "displayName": "PM Dashboard",
  "version": "0.0.1",
  "description": "A comprehensive dashboard for Product Managers",
  "author": "prateek",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "lint": "biome check .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@plasmohq/storage": "^1.15.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.21",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "storage",
      "alarms",
      "activeTab",
      "clipboardWrite"
    ],
    "host_permissions": [
      "https://api.producthunt.com/*",
      "https://hacker-news.firebaseio.com/*",
      "https://*.atlassian.net/*"
    ],
    "commands": {
      "open-dashboard": {
        "suggested_key": {
          "default": "Ctrl+Shift+D",
          "mac": "Command+Shift+D"
        },
        "description": "Open PM Dashboard"
      },
      "quick-rice": {
        "suggested_key": {
          "default": "Ctrl+Shift+R",
          "mac": "Command+Shift+R"
        },
        "description": "Quick RICE Calculator"
      },
      "quick-tam": {
        "suggested_key": {
          "default": "Ctrl+Shift+T",
          "mac": "Command+Shift+T"
        },
        "description": "Quick TAM Calculator"
      },
      "open-settings": {
        "suggested_key": {
          "default": "Ctrl+Shift+S",
          "mac": "Command+Shift+S"
        },
        "description": "Open Settings"
      }
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome check --write"
    ]
  }
}
